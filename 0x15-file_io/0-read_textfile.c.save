#include "main.h"
/**
* read_textfile - reads a text file and prints it to the POSIX standard output.
* @filename: the name of file to be read.
* @letters: number of letters it should read and print.
* Return: 0, null or actual no letters it could read or print.
*
*/
ssize_t read_textfile(const char *filename, size_t letters)
{
	char buffer;
	size_t bytes_read;
	
	if (filename == NULL)
		return (0);
	FILE *file = fopen(filename, "r");

	if (file == NULL)
		return (0);
	buffer[letters + 1];
	bytes_read = fread(buffer, 1, letters, file);
	buffer[bytes_read] = '\0';
	if (ferror(file) || (bytes_read > 0 && write(STDOUT_FILENO, buffer, bytes_read) != bytes_read)){
        fclose(file);
        return (0);
    }
    fclose(file);
    return (bytes_read);
}
